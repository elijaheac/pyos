#!/usr/bin/env python2

def _main(url, save = None, mode = "w", quiet = None):
	remote = open("/dev/nic/http/" + url.replace(";", "\\;").replace(\
		"/", ";").replace("http://", ""))
	yield
	content = remote.read()
	if content != -1:
                if quiet is None:
                        printf(content.text)
                yield
                if save is not None:
                        open(save, mode).write(content.text)
                yield
        else:
                yield
